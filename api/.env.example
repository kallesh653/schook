# API Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Port
PORT=5000

# JWT Secret (Generate a strong secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWTSECRET=your_super_secret_jwt_key_here

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Node Environment
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com
PRODUCTION_URL=https://www.your-domain.com
